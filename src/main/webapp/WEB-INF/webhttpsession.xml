<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>BCA_AJ_ServletAndJSP</display-name>

	<servlet>
		<servlet-name>httpsessionlogin</servlet-name>
		<servlet-class>com.unit4.httpsessionmgmt.Login</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>httpsessionlogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>httpsessionlogout</servlet-name>
		<servlet-class>com.unit4.httpsessionmgmt.LogOut</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>httpsessionlogout</servlet-name>
		<url-pattern>/logouthttpsession</url-pattern>
	</servlet-mapping>
	
	

	<welcome-file-list>
		<welcome-file>loginhttpsession.jsp</welcome-file>
	</welcome-file-list>

</web-app>